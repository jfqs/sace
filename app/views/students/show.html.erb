<div class="row">
  <div class="col-md-12">
    <h2 class="page-title">Alumno</h2>
    <div class="row">
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-heading">Datos del alumno</div>
          <div class="panel-body">
            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
              <div class="panel panel-default">
                <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                  <div class="panel-body">
                    <form class="simple_form form-horizontal" >
                      <div class="form-group">
                        <label class="col-sm-3 control-label">DNI</label>
                        <div class="col-sm-9">
                          <p class="form-control-static"><%= @student.dni %></p>
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="col-sm-3 control-label">Apellido Paterno</label>
                        <div class="col-sm-9">
                          <p class="form-control-static"><%= @student.p_lastname %></p>
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="col-sm-3 control-label">Apellido Materno</label>
                        <div class="col-sm-9">
                          <p class="form-control-static"><%= @student.m_lastname %></p>
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="col-sm-3 control-label">Nombre</label>
                        <div class="col-sm-9">
                          <p class="form-control-static"><%= @student.first_name %></p>
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="col-sm-3 control-label">Correo electrónico</label>
                        <div class="col-sm-9">
                          <p class="form-control-static"><%= @student.email %></p>
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="col-sm-3 control-label">Dirección</label>
                        <div class="col-sm-9">
                          <p class="form-control-static"><%= @student.address %></p>
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="col-sm-3 control-label">Teléfono</label>
                        <div class="col-sm-9">
                          <p class="form-control-static"><%= @student.phone %></p>
                        </div>
                      </div>
                      <div class="form-group form-button">
                        <div class="col-sm-9 col-sm-offset-3">
                          <%= link_to 'Editar',edit_student_path(@student), class: "btn btn-sm btn-info" %>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>