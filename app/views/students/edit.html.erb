<div class="row">
  <div class="col-md-12">
    <h2 class="page-title">Editar alumno</h2>
    <div class="row">
      <%#= render 'form' %>
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-heading">Datos del alumno</div>
          <div class="panel-body">
            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
              <div class="panel panel-default">
                <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                  <div class="panel-body">
                  <%= simple_form_for @student, wrapper: :horizontal_form, html:{class: "form-horizontal"}  do |f| %>
                    <%= f.input :dni%>
                    <%= f.input :p_lastname %>
                    <%= f.input :m_lastname %>
                    <%= f.input :first_name %>
                    <%= f.input :email %>
                    <%= f.input :address%>
                    <%= f.input :phone%>
                    <div class="form-group form-button">
                      <div class="col-sm-9 col-sm-offset-3">
                        <%= f.submit 'Actualizar', class: "btn btn-sm btn-success" %>
                        <%= link_to 'Cancelar',root_path, class: "btn btn-sm btn-danger" %>
                      </div>
                    </div>
                  <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>