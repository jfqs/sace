<div class="row">
  <div class="col-md-12">
    <h2 class="page-title">Registrar concepto de pago</h2>
    <div class="row">
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-heading">Datos</div>
          <div class="panel-body">
            <%= simple_form_for :payment, wrapper: :horizontal_form, html:{class: "form-horizontal"}  do |f| %>
              <%= f.input :payment_type, collection: @payment_types%>
              <%#= f.input :level, collection: @levels%>
              <%= f.input :level, collection: @levels, label:"Nivel", include_blank: "Seleccione nivel", input_html:{data: {remote: true, url: education_degrees_search_path}} %>
              <div class="form-group select required payment_level">
                <label class="col-sm-3 control-label">Grado</label>
                <div id="degree_cont" class="col-sm-9">
                  <p class="form-control-static"> - </p>
                </div>
              </div>
              <div class="form-group select required payment_level">
                <label class="col-sm-3 control-label">Secci√≥n</label>
                <div id="section_cont" class="col-sm-9">
                  <p class="form-control-static"> - </p>
                </div>
              </div>
              <div class="form-group select required payment_level">
                <label class="col-sm-3 control-label">Alumno</label>
                <div id="student_cont" class="col-sm-9">
                  <p class="form-control-static"> - </p>
                </div>
              </div>
              <%#= f.input :degree, collection: @payment_types%>
              <%#= f.input :section, collection: @payment_types%>
              <%#= f.input :student_id, collection: @payment_types%>
              <div class="form-group form-button">
                <div class="col-sm-9 col-sm-offset-3">
                  <%= f.submit 'Guardar', class: "btn btn-sm btn-success" %>
                  <%= link_to 'Cancelar',root_path, class: "btn btn-sm btn-danger" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>