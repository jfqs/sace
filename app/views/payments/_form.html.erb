<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
  <h4 class="modal-title" id="myModalLabel">Actualizar pago</h4>
</div>
<%= simple_form_for @payment, wrapper: :horizontal_form, html:{class: "form-horizontal"}, remote: true  do |f| %>
  <div class="modal-body">
    <%= f.input :op_code%>
    <%= f.input :op_date, as: :string%>
  </div>
  <div class="modal-footer">
    <%= f.submit 'Guardar', class: "btn btn-sm btn-success" %>
    <%= link_to 'Cancelar',nil, class: "btn btn-sm btn-danger", data: {dismiss: "modal"} %>
  </div>
<% end %>
