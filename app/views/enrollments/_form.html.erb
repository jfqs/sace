<div class="col-md-9">
  <div class="panel panel-default">
    <div class="panel-heading">Datos de la reserva del alumno </div>
    <div class="panel-body">
      <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
        <div class="panel panel-default">
          <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
            <div class="panel-body">
            <%= simple_form_for @enrollment, wrapper: :horizontal_form, html:{class: "form-horizontal"}  do |f| %>
              <div class="form-group">
                <label class="col-sm-3 control-label">Alumno</label>
                <div class="col-sm-9">
                  <p class="form-control-static"><%= @student.full_name%></p>
                </div>
              </div>
              <%= f.hidden_field :student_id, value: @student.id %>
              <%= f.input :section_id, collection: @levels %>
              <div class="form-group form-button">
                <div class="col-sm-9 col-sm-offset-3">
                  <%= f.submit 'Guardar', class: "btn btn-sm btn-success" %>
                  <%= link_to 'Cancelar',enrollments_path, class: "btn btn-sm btn-danger" %>
                </div>
              </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>